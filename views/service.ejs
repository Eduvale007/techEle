<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>

    <section class="form-section-unique">
        <div class="container-unique">
            <h2 class="section-title-unique">Solicitar Orçamento</h2>
            <div class="form-container-unique">
                <form id="orcamento-form">
                    <div class="form-group-unique">
                        <label for="nome">Nome Completo <span class="asterisk">*</span></label>
                        <input type="text" class="form-control-unique" id="nome" required>
                    </div>

                    <div class="form-group-unique">
                        <label for="email">E-mail <span class="asterisk">*</span></label>
                        <input type="email" class="form-control-unique" id="email" required>
                    </div>

                    <div class="form-group-unique">
                        <label for="telefone">Telefone <span class="asterisk">*</span></label>
                        <input type="tel" class="form-control-unique" id="telefone" required>
                    </div>

                    <div class="form-group-unique">
                        <label for="dispositivo">Dispositivo <span class="asterisk">*</span></label>
                        <select class="form-control-unique" id="dispositivo" required>
                            <option value="">Selecione</option>
                            <option value="smartphone">Smartphone</option>
                            <option value="tablet">Tablet</option>
                            <option value="notebook">Notebook</option>
                            <option value="desktop">Desktop</option>
                            <option value="outro">Outro</option>
                        </select>
                    </div>

                    <div class="form-group-unique">
                        <label>Serviços Desejados <span class="asterisk">*</span></label>
                        <div class="checkbox-container-unique">
                            <label class="checkbox-item-unique">
                                <input type="checkbox" id="tela" name="servicos[]" value="tela">
                                <span class="checkmark-unique"></span>
                                <span class="checkbox-label-unique">Reparo de Tela</span>
                            </label>
                            <label class="checkbox-item-unique">
                                <input type="checkbox" id="bateria" name="servicos[]" value="bateria">
                                <span class="checkmark-unique"></span>
                                <span class="checkbox-label-unique">Troca de Bateria</span>
                            </label>
                            <label class="checkbox-item-unique">
                                <input type="checkbox" id="pelicula" name="servicos[]" value="pelicula">
                                <span class="checkmark-unique"></span>
                                <span class="checkbox-label-unique">Troca de Película</span>
                            </label>
                            <label class="checkbox-item-unique">
                                <input type="checkbox" id="software" name="servicos[]" value="software">
                                <span class="checkmark-unique"></span>
                                <span class="checkbox-label-unique">Problema de Software</span>
                            </label>
                            <label class="checkbox-item-unique">
                                <input type="checkbox" id="outro" name="servicos[]" value="outro">
                                <span class="checkmark-unique"></span>
                                <span class="checkbox-label-unique">Outro Serviço</span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group-unique">
                        <label for="descricao">Descrição <span class="asterisk">*</span></label>
                        <textarea class="form-control-unique" id="descricao" rows="4" required></textarea>
                    </div>

                    <button type="submit" class="btn-unique">Solicitar Orçamento</button>

                    <div class="form-footer-unique">
                        <p>Você receberá seu orçamento em até 24h.</p>
                    </div>
                </form>
            </div>
        </div>
    </section>

    <%- include ('partials/footer.ejs') %>
</body>
</html>
